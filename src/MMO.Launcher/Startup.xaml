<Window x:Class="MMO.Launcher.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MMO" 
        Height="110" 
        Width="300"
        ResizeMode="NoResize"
        Loaded="CheckForUpdates">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="13*" />
            <RowDefinition Height="16*" />
        </Grid.RowDefinitions>
        <Label x:Name="StatusLabel" Content="Checking for newer version..." Grid.Row="1" Padding="0" Margin="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <ProgressBar x:Name="UpdateProgress" Grid.Row="2" BorderThickness="1 0 1 0"/>
    </Grid>
</Window>
