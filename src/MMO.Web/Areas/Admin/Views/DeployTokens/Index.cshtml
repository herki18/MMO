@model MMO.Web.Areas.Admin.ViewModels.DeployTokensIndex

<h1>Deploy Tokens</h1>

<p>
    @Html.ActionLink("Create Token", "create", new { }, new { @class = "btn btn-default btn-sm" })
</p>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Token</th>
            <th>IpAddress</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var token in Model.Tokens)
        {
            <tr>
                <input type="text" readonly="readonly" value="@token.Token" class="form-control"/>
                <td>@token.IpAddress</td>
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("delete", new {token.Id})" class="btn btn-xs btn-danger post" data-message="Are you sure you want to deletethis token">
                            <i class="glyphicon glyphicon-remove"></i>
                            delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>